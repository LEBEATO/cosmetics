generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  name      String?
  password  String
  credits   Int        @default(10000)
  purchases Purchase[]
  cosmetics Cosmetic[] @relation("UserCosmetics")
}

model Cosmetic {
  id          String     @id
  name        String
  description String?
  image       String?
  price       Int
  rarity      String?
  type        String?
  isNew       Boolean    @default(false)
  available   Boolean    @default(false)
  isBundle    Boolean    @default(false)
  bundleItems Cosmetic[] @relation("CosmeticBundle")
  bundledIn   Cosmetic?  @relation("CosmeticBundle", fields: [bundleId], references: [id])
  bundleId    String?
  purchases   Purchase[]
  owners      User[]     @relation("UserCosmetics")
}

model Purchase {
  id         Int      @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  cosmetic   Cosmetic @relation(fields: [cosmeticId], references: [id])
  cosmeticId String
  action     String // "buy" ou "return"
  amount     Int
  date       DateTime @default(now())

  @@unique([userId, cosmeticId])
}